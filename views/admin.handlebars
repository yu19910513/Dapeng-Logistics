{{#if admin}}
<link rel="stylesheet" href="../css/admin_homepage.css">
    <p class="uk-heading-line uk-text-right uk-margin-small-right"><span>logged in as <span class="uk-text-bold uk-label uk-label-success">{{name}}</span></span></p>
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" >Pending Count: <span id="pending_c"></span> </li>
                <li class="breadcrumb-item active" >Inventory Count: <span id="inventory_c"></span></li>
             </ol>
        </nav>
  <div class="uk-child-width-expand@s" uk-grid>
    <div class="uk-grid-item-match">
          <div class="uk-card uk-card-default uk-card-body uk-width-1-3@m rounded">
            <h3 class="lead"><b>Master Functions</b></h3>
            <a class="btn btn-outline-warning btn-sm shadow-sm" href="/admin/master_page">Home Page</a>
            <a class="btn btn-sm btn-outline-info shadow-sm" href="/billing"><b>â‚¿</b>illing</a>
            <a class="btn btn-sm btn-outline-danger shadow-sm" id="edit_btn" onclick="passcode()">Edit/Delete</a>
            <select name="edit_selection" id="edit_select" class="uk-select uk-form-danger rounded uk-form-small uk-form-width-small" style="display: none;" onchange="preChangeConfirm()">
              <option value="">select update</option>
              <option value="0">Pending</option>
              <option value="1">Received</option>
              <option value="2">Requested</option>
              <option value="3">Shipped</option>
              <option value="4">Pre-billed (additional charge)</option>
              <option value="5">Billed (additional chagre)</option>
              <option value="98">Archive</option>
              <option value="99">Delete</option>
            </select>
          </div>

          {{!-- <div class="uk-card bg-light shadow-sm ml-1 uk-card-body uk-width-2-3@m rounded border-dark">
              <h3 class="uk-text-default">Client Message:</h3>
          </div> --}}
    </div>
  </div>


  <form class="uk-search uk-search-large" id="boxInput">
    <span uk-search-icon></span>
    <input class="uk-search-input" type="search" placeholder="Box Search" id="myBoxInput" onkeyup="box_searching()">
  </form>
</div>

<div class="container" id="boxTable" style="display: none;">
  <small id="searchNote" class="text-primary"></small>
<table class="uk-table uk-table-small uk-table-divider text-center bg-light shadow">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Account</th>
                    <th>Box number</th>
                    <th >Item Description</th>
                    <th>Box</th>
                    <th>of Box</th>
                    <th>Qty per Box</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="boxBody">

            </tbody>
      </table>

</div>

    </div>

<script src="../javascript/admin_homepage.js"></script>
{{else}}
<script src="javascript/client_redirect.js"></script>
<img class="uk-align-center" src="https://i0.wp.com/wirthconsulting.org/wp-content/uploads/2018/02/forbidden1.jpg?w=346&ssl=1" alt="">
{{/if}}
