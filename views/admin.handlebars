              <option value="1">Received</option>
              <option value="2">Requested</option>
              <option value="3">Shipped</option>
              <option value="4">Pre-billed (additional charge)</option>
              <option value="5">Billed (additional chagre)</option>
              <option value="98">Archive</option>
              <option value="99">Delete</option>
            </select>

        </div>
      </div>

