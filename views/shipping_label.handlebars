<div class="container text-center">
    <h2>Account: <u>{{account}}</u></h2>
    <p>Order was placed on {{date}}</p>
    <div class="row justify-content-center"> <button type="button" class="btn btn-primary col-1" onclick="done()">Done</button></div>
</div>


{{#each boxes as |box|}}
<div class="container">
{{> barcode-data box }}
</div>

{{else}}
<script src="javascript/admin_redirect.js"></script>
<h3 class="text-center">NO ORDER WAS FOUND!</h3>
{{/each}}

<a id="saveAsPdfBtn" href="https://www.sejda.com/html-to-pdf">Save as PDF</a>
<script>
document.getElementById('saveAsPdfBtn').addEventListener('click', function(e){
  var pageUrl = encodeURIComponent(window.location.href);
  window.open('https://www.sejda.com/html-to-pdf?save-link=' + pageUrl);
  e.preventDefault();
});
</script>
<script>
    function done() {
        window.location.replace('/')
    }
</script>
