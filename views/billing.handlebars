{{#if admin}}
<p class="uk-heading-line uk-text-right uk-margin-small-right"><span>logged in as <span class="uk-text-bold uk-label uk-label-success">{{name}}</span></span></p>

 <div class="container mb-3">
    <div class="row justify-content-between">
        <div class="col-6">
            <h1>Billing Date: <span id="today"></span> </h1>
            <div class="row">
                <div class="col">
                    <button class="btn btn-outline-primary btn-sm shadow-sm" id="r_only" onclick="r_only()" disabled>total receiving charge: $<span id="receiving_total"></span></button>
                </div>
                 <div class="col">
                    <button class="btn btn-outline-primary btn-sm shadow-sm" id="st_only" onclick="st_only()" disabled>total storage charge: $<span id="storage_total"></span></button>
                </div>
                 <div class="col">
                    <button class="btn btn-outline-primary btn-sm shadow-sm" id="s_only" onclick="s_only()" disabled>total shipping charge: $<span id="shipping_total"></span></button>
                </div>
                <div class="col">
                    <button class="btn btn-outline-primary btn-sm shadow-sm" id="all" onclick="show_all()" disabled><b>Grand Total: $<span id="all_total"></span></b></button>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="row justify-content-end">
                <div class="col">
                    <select class="uk-select" id="client_list" onchange="client()">
                        <option value='0'>select client</option>
                     </select>
                </div>

                 <div class="col">
                    <button class="btn btn-outline-success" type="button" uk-toggle="target: #modal-cost">charge</button>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- billing units -->
<div id="modal-cost" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <h2 class="uk-modal-title text-center mb-4">Billing Units</h2>
        <div class="container">
            <div class="row">
                <div class="input-group mb-3 col">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Receiving Charge" id="receiving_cost" value="3">
                </div>

                <div class="input-group mb-3 col">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Storage Charge" id="storage_cost" value="0.33">
                </div>

                <div class="input-group mb-3 col">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Shipping Charge" id="shipping_cost" value="7">
                </div>

            </div>
        </div>


        <p class="uk-text-center">
            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
            <button class="uk-button uk-button-primary uk-modal-close" type="button">Save</button>
        </p>
    </div>
</div>



<div class="container">
    <div class="" id="storageTable" style="display: none;">
        <h4>Storing Charge: $<span id="storage_total_2"></span></h4>
        <table class="uk-table uk-table-small uk-table-divider myTable" id="stTable">
            <thead>
                <tr>
                    <th onclick="sortStTable(0)">User</th>
                    <th onclick="sortStTable(1)">Account</th>
                    <th>Box number</th>
                    <th onclick="sortStTable(3)">Item Description</th>
                    <th onclick="sortStTable(4)">Received Date</th>
                    <th onclick="sortStTable(5)">Ending Date</th>
                    <th>Volume</th>
                    <th>Billable Days</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody id="storage_table">
            </tbody>
        </table>
    </div>
<br>
    <div class="" id="receivedTable" style="display: none;">
        <h4>Receiving Charge: $<span id="receiving_total_2"></span></h4>
        <table class="uk-table uk-table-small uk-table-divider myTable bg-light" id="rTable">
            <thead>
                <tr>
                    <th onclick="sortRTable(0)">User</th>
                    <th onclick="sortRTable(1)">Account</th>
                    <th>Box number</th>
                    <th onclick="sortRTable(3)">Item Description</th>
                    <th onclick="sortRTable(4)">Received Date</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody id="received_table">
            </tbody>
        </table>
    </div>
<br>
     <div class="" id="shippedTable" style="display: none;">
        <h4>Shipping Charge: $<span id="shipping_total_2"></span></h4>
        <table class="uk-table uk-table-small uk-table-divider myTable bg-warning" id="sTable">
            <thead>
                <tr>
                    <th onclick="sortSTable(0)">User</th>
                    <th onclick="sortSTable(1)">Account</th>
                    <th onclick="sortSTable(2)">FBA#</th>
                    <th>Box number</th>
                    <th onclick="sortSTable(4)">Item Description</th>
                    <th onclick="sortSTable(5)">Shipped Date</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody id="shipped_table">
            </tbody>
        </table>
    </div>
</div>




<script src="javascript/billing_main.js"></script>
{{else}}
<script src="javascript/client_redirect.js"></script>
{{/if}}
