{{#if admin}}
<p class="uk-heading-line uk-text-right uk-margin-small-right"><span>logged in as <span class="uk-text-bold uk-label uk-label-success">{{name}}</span></span></p>
<div class="container">
    <div class="uk-grid-item-match">
        <div class="uk-card uk-card-default uk-card-body uk-width-1-3@m rounded">
            <h3 class="lead"><b>Account Merge</b> <span id="mergerType">(single)</span></h3>
             <div class="form-group col">
                <select name="user" id="user" class="uk-select uk-form-default rounded mt-1" onchange="account_data()">
                    <option value="">select client</option>
                </select>
            </div>
             <div class="form-group col" id="accountDiv">
                <label for="Account">From</label>
                <select name="account_out" id="accountOut" class="uk-select uk-form-default rounded mt-1" onchange="self_delete()" disabled>
                    <option value="">select account</option>
                </select>
            </div>
             <div class="form-group col" id="accountDiv">
                <label for="Account">To</label>
                <select name="account_in" id="accountIn" class="uk-select uk-form-default rounded mt-1" onchange="self_delete()" disabled>
                    <option value="">select account</option>
                </select>
            </div>

            <button class="btn btn-outline-danger btn-sm mt-3" onclick="merge()">Merge</button>
        </div>
    </div>
</div>

<script src="javascript/merger.js"></script>
{{else}}
<script src="javascript/client_redirect.js"></script>
{{/if}}
